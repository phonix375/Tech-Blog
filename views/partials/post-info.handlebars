
<article class="post"></article>
<div class="card">
  <div class="card-header">
    <div class="col-6">
      <a href="/post/{{id}}" target="_blank">{{title}}</a>
    </div>
    <div class="col-6">
       by {{user.username}} on {{format_date created_at}}
    </div>
  </div>
  <div class="card-body overflow-auto h-50">
    {{{post_content}}}
  </div>
</div>
</article>
